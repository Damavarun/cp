###Task B - Center Alignment

### Problem Statement
### link : - https://atcoder.jp/contests/abc445/tasks/abc445_b 

### solution 

#include<bits/stdc++.h>
using namespace std;
int main(){
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    cin>>n;
    vector<string>s(n);

    for(int i = 0;i<n;i++){
        cin>>s[i];
    }

    int m = 0;

    for(int i=0;i<n;i++){
        int len = s[i].size();
        m = max(m,len);
    }

    for(int i = 0;i<n;i++){
        int len = s[i].size();

        int k = (m-len)/2;

        cout<<string(k,'.')<<s[i]<<string(k,'.')<<endl;

    }


}


